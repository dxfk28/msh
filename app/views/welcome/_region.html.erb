<div id="container" style="height: 600px;"></div>
<script type="text/javascript" src="/javascripts/echarts.js"></script>
<script type="text/javascript">
var dom = document.getElementById("container");
var myChart = echarts.init(dom);
var app = {};
var yMax = 100;
var data = <%= @count %>;
var dataShadow = [];
var re = new RegExp("&quot;","g")

for (var i = 0; i < data.length; i++) {
    dataShadow.push(yMax);
}

option = null;
app.title = '坐标轴刻度与标签对齐';

option = {
    title: {
        text: "<%= @year.to_s%>" +"年"+ "<%= @yue.to_s%>" + "月" +" <%=  @province%>"+ "各人员区域流转占比",
        subtext: ''
    },
    toolbox: {
        feature: {
            saveAsImage:{}
        }
    },
    color: ['#3398DB'],
    tooltip : {
        trigger: 'axis',
        axisPointer : {            // 坐标轴指示器，坐标轴触发有效
            type : 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
        },
        formatter: '{b0}<br/>{a0}: {c0}%'
    },
    grid: {
        left: '2%',
        right: '2%',
        bottom: '3%',
        containLabel: true
    },
    xAxis : [
        {
            type : 'category',
            data :"<%= @users.pluck(:lastname) %>".replace(re, "").replace("["," ").replace("]","").split(","),
            axisLabel: {  
                interval:0,
                formatter:function(value){  
                    return value.split("").join("\n");  
                }
            },
            axisTick: {
                alignWithLabel: true
            }
        }
    ],
    yAxis : [
        {        
            min: 0,
            max: 100,
            interval: 10,
            type : 'value',
            axisLabel: { show: true, interval: 'auto', formatter: '{value}%' },
        }
    ],
    series : [
        {
            name:'流转率',
            type:'bar',
            barWidth: '80%',
            seriesLabel: { show: true, interval: 'auto', formatter: '{value}%' },
            data:data
        }
    ]
};
;
if (option && typeof option === "object") {
    myChart.setOption(option, true);
}
       </script>